             xmlns:converter="clr-namespace:OpenWeen.Forms.Common.Converter"
             x:Class="OpenWeen.Forms.App">
    <Application.Resources>
        <ResourceDictionary>
            <converter:TimeConverter x:Key="TimeConverter"/>
            <Color x:Key="AppTheme">#327AFF</Color>
